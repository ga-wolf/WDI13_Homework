<%= form_for @book do |f| %>
<fieldset>
  <%= f.label :title %>
  <%= f.text_field :title %>
</fieldset>

<fieldset>
  <%= f.label :year %>
  <%= f.text_field :year %>
</fieldset>

<fieldset>
  <%= f.label :genre %>
  <%= f.text_field :genre %>
</fieldset>

<fieldset>
  <%= f.label :cover %>
  <%= f.url_field :cover %>
</fieldset>

<fieldset>
  <%= f.label :synopsis %>
  <%= f.text_field :synopsis %>
</fieldset>

<fieldset>
  <%= f.label :author_id %>
  <%= f.select :author_id, Author.pluck(:name, :id), :include_blank => true %>
</fieldset>

<fieldset>
  <%= f.submit %>
</fieldset>
<% end %>
