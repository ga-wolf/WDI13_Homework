<h1><%= @author.name %></h1>

<%= image_tag @author.image, :class => 'feature' %>

<ul>
  <li>Nationality: <%= @author.nationality %></li>
  <li>Date of Birth: <%= @author.dob.strftime '%A %e %B, %Y' unless @author.dob.nil? %></li>
</ul>

<h2>Books</h2>
<% @author.books.each do |book| %>
<p><%= link_to book.title, book %></p>
<% end %>

<%= link_to 'Edit Author', edit_author_path(@author) %>
<%= link_to 'Delete Author', @author, :method => :delete %>
